<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/cantidad_de_dinero"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/quantity"
        android:textSize="62sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/fiveCentImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_textView"
        app:srcCompat="@drawable/five_cents" />

    <ImageView
        android:id="@+id/tenCentImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="@+id/fiveCentImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toEndOf="@+id/fiveCentImageView"
        app:layout_constraintTop_toTopOf="@+id/fiveCentImageView"
        app:srcCompat="@drawable/ten_cents" />

    <ImageView
        android:id="@+id/twentyFiveCentImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/fiveCentImageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fiveCentImageView"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/quarter" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_0_05"
        app:layout_constraintEnd_toEndOf="@+id/fiveCentImageView"
        app:layout_constraintStart_toStartOf="@+id/fiveCentImageView"
        app:layout_constraintTop_toBottomOf="@+id/fiveCentImageView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_0_10"
        app:layout_constraintEnd_toEndOf="@+id/tenCentImageView"
        app:layout_constraintStart_toStartOf="@+id/tenCentImageView"
        app:layout_constraintTop_toBottomOf="@+id/tenCentImageView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_0_25"
        app:layout_constraintEnd_toEndOf="@+id/twentyFiveCentImageView"
        app:layout_constraintStart_toStartOf="@+id/twentyFiveCentImageView"
        app:layout_constraintTop_toBottomOf="@+id/twentyFiveCentImageView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_1_00"
        app:layout_constraintEnd_toEndOf="@+id/OneDollarImageView"
        app:layout_constraintStart_toStartOf="@+id/OneDollarImageView"
        app:layout_constraintTop_toBottomOf="@+id/OneDollarImageView" />

    <ImageView
        android:id="@+id/OneDollarImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/tenCentImageView"
        app:layout_constraintStart_toStartOf="@+id/tenCentImageView"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/one_dollar" />
</androidx.constraintlayout.widget.ConstraintLayout>